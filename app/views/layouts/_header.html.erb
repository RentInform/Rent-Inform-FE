<style>
    @media(max-width:1520px) {
        .left-svg {
            display: none;
        }
    }
  
    /* small css for the mobile nav close */
    #nav-mobile-btn.close span:first-child {
        transform: rotate(45deg);
        top: 4px;
        position: relative;
        background: #a0aec0;
    }
  
    #nav-mobile-btn.close span:nth-child(2) {
        transform: rotate(-45deg);
        margin-top: 0px;
        background: #a0aec0;
    }
  </style>
  
  <header class="fixed top-0 z-50 w-full h-20 bg-white shadow-lg">
    <div class="flex items-center h-full mx-20 justify-between">
      <a href="/" class="relative flex items-center h-full font-black leading-none">
        <%= image_tag 'rent_inform_logo.svg', class: "h-8" %>
      </a>


      
      <% if current_user %>
        <div id="header-buttons" class="w-64 gap-4 flex items-center">
          <a href="/dashboard"
              class="relative z-40 inline-block w-[132px] h-full py-2 text-sm font-bold leading-none text-center transition-all duration-200 border-2 border-blue-700 rounded shadow-md fold-bold sm:w-full text-blue-700 hover:bg-blue-700 hover:text-white">My Dashboard</a>
          <div class="relative z-40 inline-block w-[132px] h-full py-2 text-sm font-bold leading-none text-white text-center transition-all duration-200 bg-blue-700 border-2 border-blue-700 rounded shadow-md fold-bold sm:w-full hover:bg-white hover:text-blue-700">
            <%= button_to "Log out", logout_path, method: :delete %>
          </div>
        </div>
      <% else %>
        <div id="header-buttons" class="w-64 gap-4 flex items-center">
          <a href="/login"
              class="relative z-40 inline-block w-[132px] h-full py-2 text-sm font-bold leading-none text-center transition-all duration-200 border-2 border-blue-700 rounded shadow-md fold-bold sm:w-full text-blue-700 hover:bg-blue-700 hover:text-white ">Log in</a>
          <a href="/sign_up"
              class="relative z-40 inline-block w-[132px] h-full py-2 text-sm font-bold leading-none text-white text-center transition-all duration-200 bg-blue-700 border-2 border-blue-700 rounded shadow-md fold-bold sm:w-full hover:bg-white hover:text-blue-700">Sign up</a>
        </div>
      <% end %>
    </div>
  </header>