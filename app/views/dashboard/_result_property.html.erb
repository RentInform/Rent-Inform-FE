<div id="property-<%= @property.id %>" class='p-6 border border-gray-300 rounded-lg shadow-md hover:shadow-lg'>
  <div class="flex justify-between">
    <div class="text-xl font-semibold">
      <h1><%= @property.street.titleize %>, Philadelphia, PA <%= @property.zip[0..4] %></h1>
    </div>

    <% if !prop_ids(@user_properties).include?(@property.id)%>
      <%= render partial: 'shared/property_button', locals: { url: user_properties_path, method: :post, property: @property, button: "Save", style: 'inline-block px-2 py-1 text-s font-bold leading-none text-white text-center transition-all duration-200 bg-blue-700 border-2 border-blue-700 shadow-md fold-bold hover:bg-white hover:text-blue-700 rounded'}  %>
    <% else %>
      <%= render partial: 'shared/property_button', locals: { url: user_properties_path, method: :delete, property: @property, button: "Unsave", style: 'inline-block px-2 py-1 text-s font-bold leading-none text-white text-center transition-all duration-200 bg-blue-700 border-2 border-blue-700 shadow-md fold-bold hover:bg-white hover:text-blue-700 rounded' } %>
    <% end %>

  </div>
  
  <p>This property is certified to rent!</p>

  <%= render partial: 'shared/property_button', locals: { url: property_path(@user.id, @property.id), method: :get, property: @property, button: "More Details", style: 'text-blue-600 underline hover:text-blue-900 cursor-pointer' } %>
</div>
