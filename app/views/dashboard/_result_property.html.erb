<div class="flex flex-row justify-between">
  <div class="font-semibold">
    <%= @property.street.titleize %>, Philadephia, PA <%= @property.zip[0..4] %>
  </div>
  <div>
    <% if !prop_ids(@user_properties).include?(@property.id)%>
      <%= render partial: 'property_button', locals: { url: user_properties_path, method: :post, property: @property, button: "Save" } %>
    <% else %>
      <%= render partial: 'property_button', locals: { url: user_properties_path, method: :delete, property: @property, button: "Unsave" } %>
    <% end %>
  </div>
</div>
<div class="flex flex-row justify-evenly">
  <div class='border border-gray-400 p-2 rounded-md'>
    Certified to Rent
  </div>
  <div class='border border-gray-400 p-2 rounded-md'>
    <p class='justify-center'>
      <%= @property.bike_score %>
    </p>
    <p class=''>
      Bike Score
    </p>
  </div>
  <div class='border border-gray-400 p-2 rounded-md'>
    <p class='justify-center'>
      <%= @property.walk_score %>
    </p>
    <p class=''>
      Walk Score
    </p>
  </div>
  <div class='border border-gray-400 p-2 rounded-md'>
    <p class='justify-center'>
      <%= @property.transit_score %>
    </p>
    <p class=''>
      Transit Score
    </p>
  </div>
  <div class='border border-gray-400 p-2 rounded-md'>
    <p class='justify-center'>
      <%= @property.safety_score %>
    </p>
    <p class=''>
      Safety Score
    </p>
  </div>
</div>
