<%= form_with url: url, method: method, local: true do |f| %>
  <%= f.hidden_field :user_id, value: @user.id%>
  <%= f.hidden_field :property_id, value: property.id%>
  <label>
    <%= f.submit class: 'hidden' %>
    <% if button == "Save" %>
      <svg class="save w-6 h-6 text-yellow-500 cursor-pointer hover:text-yellow-600" role="button" title="Save" aria-label="Save" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 20">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m13 19-6-5-6 5V2a1 1 0 0 1 1-1h10a1 1 0 0 1 1 1v17Z"/>
      </svg>
    <% else %>
      <svg class="unsave w-6 h-6 fill-yellow-500 cursor-pointer" role="button" title="Unsave" aria-label="Unsave" xmlns="http://www.w3.org/2000/svg" fill="#fcc414" viewBox="0 0 14 20">
        <path d="M13 20a1 1 0 0 1-.64-.231L7 15.3l-5.36 4.469A1 1 0 0 1 0 19V2a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v17a1 1 0 0 1-1 1Z"/>
      </svg>
    <% end %>
  </label>
<% end %>